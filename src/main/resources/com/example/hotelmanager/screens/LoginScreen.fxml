<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="CENTER" spacing="30.0" stylesheets="@../CSS/LoginCss.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginScreenController">
    <Label styleClass="title-label" text="Hotel Manager" />

    <VBox spacing="10">
        <Label text="Username:" />
        <TextField fx:id="usernameField" promptText="Enter your username" />
    </VBox>

    <VBox spacing="10">
        <Label text="Password:" />
        <PasswordField fx:id="passwordField" promptText="Enter your password" />
    </VBox>

    <Button fx:id="loginButton" onAction="#handleLogin" styleClass="login-button" text="Login" />
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
