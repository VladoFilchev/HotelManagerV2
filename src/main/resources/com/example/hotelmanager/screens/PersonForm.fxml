<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PersonFormController">
   <children>
      <Pane prefHeight="98.0" prefWidth="600.0" style="-fx-background-color: rgb(117, 181, 69); -fx-background-radius: 0 0 20 20;" />
      <Label layoutX="215.0" layoutY="30.0" style="-fx-font-weight: bold;" text="Create Guest">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Group layoutX="399.0" layoutY="326.0">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#add" text="Add">
               <font>
                  <Font size="17.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button id="cancelButton" fx:id="cancelButton" layoutX="85.0" mnemonicParsing="false" onAction="#cancel" text="Cancel">
               <font>
                  <Font size="17.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </Group>
      <Group layoutX="71.0" layoutY="124.0">
         <children>
            <Group layoutX="21.0">
               <children>
                  <TextField fx:id="nameField" layoutX="59.0" layoutY="7.0" />
                  <Label text="Name:" textAlignment="RIGHT">
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
               </children>
            </Group>
            <Group layoutY="41.0">
               <children>
                  <Label text="Surname:">
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="surnameField" layoutX="80.0" layoutY="7.0" />
               </children>
            </Group>
            <Group layoutX="18.0" layoutY="123.0">
               <children>
                  <Label text="Phone:">
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="phoneField" layoutX="62.0" layoutY="7.0" />
               </children>
            </Group>
            <Group layoutX="30.0" layoutY="82.0">
               <children>
                  <Label text="DOB:">
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="dobField" layoutX="50.0" layoutY="7.0" />
               </children>
            </Group>
         </children>
      </Group>
      <Label fx:id="errorLabel" layoutX="79.0" layoutY="318.0" text="Invalid data entered" textFill="RED" visible="false">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
